<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoogleMessenger.Pages.AdvancedSettings"
             Title="AdvancedSettings">
    <VerticalStackLayout>
        <Label
            Margin="10"
            Text="AdvancedSettings"
            FontSize="Large"
            HorizontalOptions="Center" />

         <Border BackgroundColor="DarkRed" Margin="20" StrokeShape="RoundRectangle 20,20,20,20">
            <StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="Delete Account" Margin="15" TextColor="White" FontAttributes="Bold" HorizontalOptions="Start"/>
                    <Switch IsToggled="False"/>
                </StackLayout>
    
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>
