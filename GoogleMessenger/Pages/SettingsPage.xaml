<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoogleMessenger.Pages.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Label 
            Text="Settings"
            FontSize="Large"
            Margin="10"
            HorizontalOptions="Center" />

        <Border BackgroundColor="DarkRed" Margin="20" StrokeShape="RoundRectangle 20,20,20,20">
            <StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="LightMode" Margin="15" TextColor="White" FontAttributes="Bold" HorizontalOptions="Start"/>
                    <Switch IsToggled="true"/>
                </StackLayout>
    
            </StackLayout>
        </Border>

        <Border BackgroundColor="DarkRed" Margin="20" StrokeShape="RoundRectangle 20,20,20,20">
            <Button Text="Advanced Settings" BackgroundColor="DarkRed" Clicked="GoToAdvancedSettings"/>

        </Border>
    </VerticalStackLayout>
</ContentPage>
